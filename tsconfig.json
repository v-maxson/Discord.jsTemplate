{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "CommonJS",
        "lib": [
            "ESNext"
        ],

        "rootDir": "./src",
        "outDir": "./bin",
        "baseUrl": ".",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "removeComments": true,
        "strict": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}